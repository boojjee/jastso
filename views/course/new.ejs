<div class="row">
    <div class="large-12 columns">

      <h1>เพิ่มรายวิชา</h1>


      <form data-abide action="/course/create" method="POST">
        <h4>ข้อมูลของรายวิชา</h4>

        <div class="name-thai-field">
          <label>ชื่อ *<small>required</small>
            <input name="syllabus" type="text" required>
          </label>
          <small class="error">ชื่อวิชา</small>
        </div>

        <div class="name-thai-field">
          <label>คำอธิบาย *<small>required</small>
            <input name="discription" type="text" required>
          </label>
          <small class="error">คำอธิบายของรายวิชา</small>
        </div>
        <div class="name-thai-field">
          <label>BookStep <small>required</small>
            <input name="book_step" type="text">
          </label>
          <small class="error">BookStep</small>
        </div>

        <div class="name-thai-field">
          <label>Groups *<small>required</small>
            <input name="groups" type="text" required>
          </label>
          <small class="error">กรุณาระบุ Group</small>
        </div>

        <div class="name-thai-field">
          <label>ราคา <small>required</small>
            <textarea  name="cost" required></textarea>
          </label>
          <small class="error">กรุณาระบุราคาของรายวิชานี้</small>
        </div>


  
        <input type="hidden" name="sc_code" value="<%=sc_code%>">

        <button type="submit">Submit</button>
      </form>


    </div>
</div>