<div class="row">
    <div class="large-12 columns">

      <h1>เพิ่มพนักงาน</h1>


      <form data-abide action="/employee/update" method="POST">
        <h4>ข้อมูลของพนักงาน</h4> 

        <div class="name-thai-field">
          <label>ชื่อ <small>required</small>
            <input name="first_name" type="text" required value="<%=employeeData.first_name %>">
          </label>
          <small class="error">ชื่อพนักงาน</small>
        </div>

        <div class="name-thai-field">
          <label>นามสกุล <small>required</small>
            <input name="last_name" type="text" required value="<%=employeeData.last_name %>">
          </label>
          <small class="error">นามสกุลพนักงาน</small>
        </div>

        <% if(req.session.user_role == 1){ %>
        <div class="name-thai-field">
          <label>ตำแหน่ง <small>required</small>
            <select name="position" id="" required>
              <option <% if(employeeData.position == "2"){%> selected <% }  %> value="2">ผู้จัดการ</option>
              <option <% if(employeeData.position == "3"){%> selected <% }  %> value="3">ผู้ช่วยผู้จัดการ</option>
              <option <% if(employeeData.position == "4"){%> selected <% }  %> value="4">หัวหน้าธุรการ</option>
              <option <% if(employeeData.position == "5"){%> selected <% }  %>value="5">ธุรการ</option>
            </select>
          </label>
          <small class="error">กรุณาระบุตำแหน่งของพนักงาน</small>
        </div>
        <% } %>

        

        <div class="name-thai-field">
          <label>เบอร์โทร <small>required</small>
            <input name="phone" type="text" required value="<%=employeeData.phone %>">
          </label>
          <small class="error">กรุณาระบุเบอร์โทร</small>
        </div>

        <div class="name-thai-field">
          <label>ที่อยู่ <small>required</small>
						<textarea  name="address" required><%=employeeData.address %></textarea>
          </label>
          <small class="error">กรุณาระบุที่อยู่</small>
        </div>

        <div class="email-field">
          <label>อีเมล์ <small>required</small>
            <input name="email"  type="email" required value="<%=employeeData.email %>">
          </label>
          <small class="error">กรุณาระบุอีเมล์.</small>
        </div>

				<input type="hidden" name="sc_code" value="<%=sc_code%>">
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />

        <button type="submit">Submit</button>
      </form>


    </div>
</div>