<div class="row">
  <h1 id="switch">การจัดนักเรียน</h1>

  <div>
    <a href="/<%=sc_code%>/student/new" class="button">
      <i class="fi-plus"></i> เพิ่มนักเรียน
    </a>
  </div>

  <table id="" class="data-table-ui" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th width="100">#</th>        
        <th width="100">Status</th>
        <th width="100">ชื่อ</th>
        <th width="150">นามสกุล</th>
        <th width="150">เบอร์โทรศัพท์</th>
        <th width="200"></th>
        <th width="200"></th>
      </tr>
    </thead>
    <tbody>
      
      <% _.each(studentData, function(data, i){ %>

      <tr>
        <td><%=i+1 %></td>        
        <td><%=data.student_status %></td>
        <td><%=data.first_name_thai %></td>
        <td><%=data.last_name_thai %></td>
        <td><%=data.phone %></td>
        <td>
          <a href="/<%=data.sc_code %>/student/<%=data._id%>/edit" class="button"  title="Edit">
            <i class="fi-pencil"></i> แก้ไข
          </a>
        </td>
        <td> 
          <a href="/<%=data.sc_code %>/employee/<%=data._id %>/destroy" class="button"  title="delete">
            <i class="fi-x"></i> ลบ
          </a>
        </td>
      </tr>

      <% }) %>

    </tbody>
  </table>

</div>